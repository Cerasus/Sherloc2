<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oleksiisaienko.sherloc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground_sherloc"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.oleksiisaienko.sherloc2.MainActivity"
            android:theme="@style/ActivityOrange">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.oleksiisaienko.sherloc2.ChooseActivity">
        </activity>
        <activity android:name="com.oleksiisaienko.sherloc2.TrafficLightActivity">
            <intent-filter>
                <action android:name="com.oleksiisaienko.sherloc2.TrafficLightActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name="com.oleksiisaienko.sherloc2.CounterCrowActivity"
            android:theme="@style/ActivityLight">
        </activity>
        <activity android:name="com.oleksiisaienko.sherloc2.AboutProgramActivity"
            android:theme="@style/Theme.AppCompat.Dialog">
        </activity>
    </application>

</manifest>